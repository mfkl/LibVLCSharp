<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:v="clr-namespace:LibVLCSharp.Avalonia.Sample.Views"
		xmlns:vlc="clr-namespace:LibVLCSharp.Avalonia;assembly=LibVLCSharp.Avalonia"
		xmlns:viewModels="clr-namespace:LibVLCSharp.Avalonia.Sample.ViewModels"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="LibVLCSharp.Avalonia.Sample.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="LibVLCSharp.Avalonia.Sample">
	
	<Grid ColumnDefinitions="50, 7, 500, 7, *">
		<Panel Grid.Column="0">
			<ToggleButton x:Name="VisibilityButton" VerticalAlignment="Top" Click="VisibilityButton_OnClick" IsChecked="True">Is Visible</ToggleButton>
		</Panel>

		<GridSplitter Grid.Column="1" Background="Blue"></GridSplitter>

		<v:VideoControl x:Name="VideoControl" Grid.Column="2"></v:VideoControl>

		<GridSplitter Grid.Column="3" Background="Red"></GridSplitter>

		<Panel Grid.Column="4">
			<ToggleButton x:Name="ContentButton" VerticalAlignment="Top" Click="ContentButton_OnClickButton_OnClick" IsChecked="True">Change Content</ToggleButton>
		</Panel>
	</Grid>
</Window>
